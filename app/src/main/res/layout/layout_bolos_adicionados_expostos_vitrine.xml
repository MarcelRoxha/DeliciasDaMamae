<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <TextView
        android:id="@+id/texto_nome_bolo_adicionado_exposto_vitrine_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_adapter_ingrediente_adicionado"
        android:fontFamily="@font/bungee_shade"
        android:padding="6dp"
        android:text="@string/texto_expostos_na_vitrini"
        android:textColor="@color/rosa"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        app:cardCornerRadius="66dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/foto_salva_bolo_adicionado_exposto_vitrine_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="@string/imagem_captura_foto"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_fundo_add_user" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_adapter_ingrediente_adicionado"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_adapter_ingrediente_adicionado"
            android:fontFamily="@font/bungee_shade"
            android:padding="6dp"
            android:text="@string/Preco"
            android:textColor="@color/rosa"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texto_preco_bolo_adicionado_exposto_vitrine_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:padding="6dp"
            android:text="@string/Preco"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>