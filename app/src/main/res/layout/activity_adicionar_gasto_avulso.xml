<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdicionarOuEditarGastoAvulsoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/ic_logo"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/textView10111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Digite o nome desse gasto avulso"
            android:textColor="@color/rosa"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputNomeGastoAvulsoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Ex: Faltou leite"
            android:inputType="text"
            android:textSize="18sp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/textView101234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Qual valor desse gasto?"
            android:textColor="@color/rosa"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="R$"
                android:textColor="@color/rosa"
                android:gravity="right"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputValorGastoAvulsoId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="18dp"
                android:ems="10"
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                android:hint="Ex: 100,00 ou 100"/>
        </LinearLayout>


        <TextView
            android:id="@+id/textView10122"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Data de registro serÃ¡"
            android:textColor="@color/rosa"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView10233"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Data: "
                android:textColor="@color/rosa"
                android:textSize="18dp"
                android:textStyle="bold" />

            <!--            <com.santalu.maskara.widget.MaskEditText-->
            <!--                android:id="@+id/inputDiaCobradoDoGastoFixoId"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_margin="5dp"-->
            <!--                android:layout_weight="6"-->
            <!--                android:hint="Ex: 15"-->
            <!--                android:inputType="number"-->
            <!--                android:textSize="18dp"-->
            <!--                app:maskStyle="completable" />-->

            <EditText
                android:id="@+id/inputDiaCobradoDoGastoAvulsoId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:ems="10"
                android:enabled="false"
                android:hint=""
                android:inputType="text"
                android:textSize="18dp" />


        </LinearLayout>






        <Button
            android:id="@+id/botaoCadastrarGastoFixoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:text="CADASTRAR GASTO AVULSO"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/botaoCancelaOCadastroGastoFixoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:layout_margin="35dp"
            android:text="CANCELAR"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />
    </LinearLayout>
</ScrollView>