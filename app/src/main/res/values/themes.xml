<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeliciasDaMamae" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_claro</item>
        <item name="colorPrimaryVariant">@color/azul_claro</item>
        <item name="colorOnPrimary">@color/rosa</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/azulCraro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/azul_claro</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DeliciasDaMamae.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>

    </style>

    <style name="Theme.DeliciasDaMamae.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DeliciasDaMamae.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/azul_escuro</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Theme.Splash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Splash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Splash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>